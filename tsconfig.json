{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "allowJs": false,
    "pretty": true,
    "strictNullChecks": true,
    "declaration": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": [
    "dangerfile.ts",
    "node_modules",
    "dist",
    "coverage",
    "eslint.config.js",
    "jest.config.js",
    ".prettierrc.js"
  ]
}
